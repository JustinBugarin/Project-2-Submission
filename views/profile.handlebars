{{#if is_organizer}}
<div class="row mt-4">
  <div class="col-md-6 event-list">
    <h3>Created Events:</h3>
    {{#if createdEvents}}
    {{#each createdEvents}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/event/{{event_id}}">{{name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{event_id}}">Delete</button>
      </div>
    </div>
    {{/each}}
    {{else}}
    <p>Make a event!</p>
    {{/if}}
  </div>
</div>
{{/if}}

